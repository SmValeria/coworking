include ../data/menu
include ../data/socials

include ../mixins/image
include ../mixins/menu
include ../mixins/socials
include ../mixins/breadcrumbs

- const pageName = "Отзывы"

doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Воркадиум | Отзывы
    link(rel='icon', href='./assets/images/favicon.png')
    link(rel='stylesheet', href='./assets/css/main.min.css')
  body
    .wrapper
      include ../sections/header
      .page
        .page__container.container
          aside.sidebar
            +menu({
              list: menu,
              blockClass: "sidebar__menu menu--vertical"
            })
          main.maincontent
            +breadcrumbs({
              blockClass: "page__breadcrumbs",
              pageName
            })
            include ../sections/comments
      include ../sections/flack
      include ../sections/feedback
      include ../sections/footer